.header_view{
 width:100%;height:130rpx;background: white;position: fixed;z-index: 9999;
}
.header_content{
  color: black;padding-top:60rpx;padding-left:30rpx;
}
.header_icon{
  margin-left: 10rpx;
}
.main_view{
  width: 100%;height: auto;padding-top: 130rpx;background: white;
}
.banner_view{
  width: 100%;
  padding: 15rpx;
  height: auto;
}
.banner_img{
  width: 100%;
  height: 300rpx;
}
.user_login_view{
  width: 100%;height: 160rpx;padding: 15rpx;
}
.user_img{
  width: 120rpx;
  height: 120rpx;
  float: left;
  border-radius: 100px;
  margin: 0rpx 15rpx 0rpx 20rpx;
}
.user_title_view{
  width: 380rpx;
  float: left;
  padding-left: 15rpx;
}
.title_name{
  font-size: 16px;
  font-weight: 600;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.title_label{
  font-size: 14px;
  margin-top: 15rpx;
  color: #949494;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.login_btn_view{
  float: left;
  width: 170rpx;
  padding-left: 20rpx;
  padding-top: 10rpx;
}
.login_btn{
  width: 100% !important;
  height: 70rpx;
  background: white !important;
  border: 2px solid #ff9b34;
  color: #ff9b34;
  border-radius: 20px !important;
} 
.list_img_view{
  width: 100%;
  padding: 0rpx 15rpx;
  height: auto;
}
.list_img{
  width: 100%;
  height: 160rpx;
}
.flex_img{
  width: 100%;
  height: 140rpx;
}
.article_view{
  width: 100%;
  padding: 15rpx;
  margin-top: 15rpx;
}
.article_title_view{
  width: 100%;
  text-align: center;
}
.article_list_img{
  width: 45%;
  height: 55rpx;
  margin-left: 70rpx;
}
.article_more_view{
  float: right;
  padding-top: 20rpx;
  margin-right: 20rpx;
  font-size: 14px;
  color: #949494;
}
.list_content_view{
  width: 95%;
  height: auto;
  min-height: 300rpx;
  margin: 40rpx auto;
  border: 2px solid #1eab3c;
  border-radius: 20px;
}
.article_content{
  margin: 25rpx;
  height: 170rpx;
}
.left_img{
  float: left;
  width: 150rpx;
  height: 150rpx;
  border-radius: 10px;
}
.right_info{
 margin-left: 40rpx;
 float: left;
 width: 420rpx;
}
.info_title{
  width: 100%;
  font-size: 16px;
  font-weight: 600;
  letter-spacing: 1px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.info_content{
  width: 100%;
  font-size: 12px;
  margin: 15rpx 0rpx;
  color: #949494;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;    
}
.info_date{
  width: 100%;
  font-size: 12px;
  color: #949494;
}