<!-- 价格走势页 -->
<scroll-view scroll-y class="scrollPage">
  <!-- 未登录 -->
  <view style="background-color: #00c98d;width:100%;height:120rpx;">
    <view class="text-white text-lg" style="padding-top:55rpx;padding-left:30rpx;">
      价格走势
    </view>
  </view>
  <view style="display: flex;position: absolute;width:100%;">
    <view class='select_box'>
      <view class='select' catchtap='selectTap'>
        <text class='select_text'>{{selectData[index]}}</text>
        <image class='select_img {{show&&"select_img_rotate"}}' src='../../image/userCenter/select-jiantou.png'></image>
      </view>
      <view class='option_box' style='height:{{show?(selectData.length>5?300:selectData.length*60):0}}rpx;'>
        <text class='option' style='{{index==selectData.length-1&&"border:0;"}}' wx:for='{{selectData}}' wx:key='this'
          data-index='{{index}}' catchtap='optionTap'>{{item}}</text>
      </view>
    </view>
    <view class='select_box'>
      <view class='select' catchtap='selectTap1'>
        <text class='select_text'>{{selectData1[index1]}}</text>
        <image class='select_img {{show1&&"select_img_rotate"}}' src='../../image/userCenter/select-jiantou.png'></image>
      </view>
      <view class='option_box' style='height:{{show1?(selectData1.length>5?300:selectData1.length*60):0}}rpx;'>
        <text class='option' style='{{index1==selectData1.length-1&&"border:0;"}}' wx:for='{{selectData1}}' wx:key='this'
          data-index='{{index}}' catchtap='optionTap1'>{{item}}</text>
      </view>
    </view>
  </view>

  <view class="container" style="position:relative;">
    <ec-canvas style="width: 100%;height: 500rpx;background-color:white;padding-top:50rpx;margin-top:-100rpx;" id="mychart-dom-bar" canvas-id="mychart-bar" ec="{{ ec }}"></ec-canvas>
  </view>
</scroll-view>