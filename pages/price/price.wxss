 .select_box{
  background: #fff;
  width: 50%;
  /* margin: 30rpx auto; */
  position: relative;
  z-index: 100;
 }
 .select{
  box-sizing: border-box;
  width: 100%;
  height: 90rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
 }
 .select_text{
  font-size: 30rpx;
  flex: 1;
  text-align: center;
 }
 .select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
 }
 .select_img_rotate{
  transform:rotate(180deg); 
 }
 .option_box{
  /* position: absolute; */
  top: 70rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  /* background: #fff; */
  background: rgb(253, 253, 253);
  transition: height 0.3s;
  text-align: center;
 }
 .option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
 }
 
